{
  "manifest_version": 3,
  "name": "Taaabs Web Clipper",
  "short_name": "taaabs",
  "description": "Easy to use, privacy-first way to organize, share and discover web bookmarks.",
  "version": "0.1.4",
  "homepage_url": "https://taaabs.com/library",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Save to taaabs"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup-injected.html", "popup-injected.bundle.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "author": "Taaabs, Inc.",
  "host_permissions": ["https://taaabs.com/*"],
  "permissions": [
    "storage",
    "scripting",
    "background",
    "contextMenus",
    "activeTab",
    "tabs",
    "webNavigation",
    "alarms"
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": ["https://taaabs.com/*"],
      "js": ["content-scripts/get-token.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/inject-popup.js"]
    }
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
