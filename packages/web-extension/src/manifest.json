{
  "manifest_version": 3,
  "name": "Taaabs Web Clipper, clip any page to ChatGPT!",
  "short_name": "taaabs",
  "description": "Unlock the joy of your web research. Privately clip any page to your personal library. Assist browsing with top AI chatbots.",
  "version": "0.3.4",
  "homepage_url": "https://taaabs.com/library",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Taaabs Web Clipper"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup.js",
        "popup.css",
        "floating-button.html",
        "floating-button.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "author": "Robert Piosik",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "tabs",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://taaabs.com/*"],
      "js": ["get-auth-data-content-script.js", "get-theme-content-script.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": [
        "inject-floating-button-content-script.js",
        "inject-popup-content-script.js",
        "send-prompt-content-script.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
