{
  "manifest_version": 3,
  "name": "Taaabs Web Clipper",
  "short_name": "taaabs",
  "description": "Easy to use, privacy-first way to organize, share and discover web bookmarks.",
  "version": "0.1.4",
  "homepage_url": "https://taaabs.com/library",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Save to taaabs"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.js", "popup.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "author": "Taaabs, Inc.",
  "permissions": [
    "storage",
    "scripting",
    "background",
    "contextMenus",
    "activeTab",
    "tabs",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://taaabs.com/*"],
      "js": ["get-auth-data-content-script.js", "get-theme-content-script.js"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["inject-popup-content-script.js"]
    },
    {
      "matches": [
        "https://chatgpt.com/",
        "https://gemini.google.com/app",
        "https://chat.mistral.ai/chat",
        "https://claude.ai/new",
        "https://duckduckgo.com/?q=DuckDuckGo+AI+Chat&ia=chat",
        "https://coral.cohere.com/",
        "https://huggingface.co/chat/",
        "https://aistudio.google.com/app/prompts/new_chat",
        "https://chat.deepseek.com/"
      ],
      "js": ["send-chatbot-prompt-content-script.js"]
    }
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
