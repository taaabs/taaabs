{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "types": ["jest", "chrome", "webextension-polyfill", "node"],
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["../shared/src/*"],
      "@repositories/*": ["../repositories/src/*"],
      "@web-ui/*": ["../web-ui/src/*"]
    }
  },
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../shared/src/**/*.ts",
    "../repositories/src/**/*.ts",
    "../web-ui/src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
