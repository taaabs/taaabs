{
  "manifest_version": 3,
  "name": "Taaabs - social bookmarking",
  "short_name": "taaabs",
  "description": "Add any link to your personal library.",
  "version": "0.1.0",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Save to taaabs"
  },
  "author": "Taaabs, Inc.",
  "host_permissions": ["https://taaabs.com/*"],
  "permissions": [
    "cookies",
    "storage",
    "scripting",
    "background",
    "contextMenus",
    "activeTab",
    "tabs"
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": ["https://taaabs.com/*"],
      "js": ["content_scripts/get_token.js"]
    }
  ]
}
