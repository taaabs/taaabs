{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@web-ui/*": ["../web-ui/src/*"],
      "@repositories/*": ["../repositories/src/*"],
      "@shared/*": ["../shared/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest"],
    "jsxImportSource": "react"
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "../web-ui/src/**/*.ts",
    "../repositories/src/**/*.ts",
    "../shared/src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
